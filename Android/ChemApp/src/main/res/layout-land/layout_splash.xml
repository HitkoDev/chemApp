<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" >
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center" >
        
        <ImageView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:src="@drawable/ic_splash" />
        
    </LinearLayout>
        
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" 
        android:layout_weight="0"
        android:orientation="vertical"
        android:gravity="center" >
    
        <Button
            android:layout_height="wrap_content"
            android:layout_width="@dimen/splash_button_width"
            android:text="@string/continue_learning"
            android:id="@+id/button_continue_learning"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="@color/button_color"
            android:elevation="2dp"
            android:onClick="continueLearning" />
    
        <Button
            android:layout_height="wrap_content"
            android:layout_width="@dimen/splash_button_width"
            android:text="@string/take_exam"
            android:id="@+id/button_take_exam"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="@color/button_color"
            android:layout_marginBottom="32dp"
            android:elevation="2dp"
            android:onClick="takeExam" />
    
    </LinearLayout>
    
</LinearLayout>
